@model IEnumerable<Base_Conhecimento.Chamado>

@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>

<html lang="pt-br">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/estilo.css" />
</head>


<body>

    <div class="text-center">
        <h1 class="display-4">Base de Conhecimento</h1>
        <p>Encontre a solução do seu problema aqui!</p>
    </div>

    <div class="container" id="solucao">
        <section id="content">

            <table class="table">

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                @Html.DisplayFor(modelItem => item.chamadoID) - @*@Html.DisplayFor(modelItem => item.titulo)*@
                                @Html.Raw(item.descricao)
                            </th>
                            <th>
                            <th>
                                @Html.ActionLink("Ver mais...", "Solucao", new { id = item.chamadoID }, new { @class = "label label-warning" })
                            </th>
                        </tr>
                    }
                </tbody>
            </table>

        </section>
    </div>

</body>
</html>