@model Base_Conhecimento.ChamadoSolucaoViewModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html lang="pt-br">

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.3/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.3/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.tiny.cloud/1/zjb6w3k3xzz82wgr316q63um7yvb1xnp47lizxn6phkcvuhm/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: '#textareachamado',
            plugin: 'a_tinymce_plugin',
            a_plugin_option: true,
            a_configuration_option: 400

        });
    </script>
    <script>
        tinymce.init({
            selector: '#textareasolucao',
            plugin: 'a_tinymce_plugin',
            a_plugin_option: true,
            a_configuration_option: 400

        });
    </script>
</head>
<body>

    <div class="mx-auto py-4">
        <div class="card">
            <div class="card-header bg-primary text-uppercase text-white">
                <h3>Insira as informações do chamado e Solução</h3>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Salvar" method="post">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="solucaoModel.titulo" class="control-label"></label>
                                <input asp-for="solucaoModel.titulo" class="form-control" />
                                <span asp-validation-for="solucaoModel.titulo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="chamadoModel.chamadoID" class="control-label"></label>
                                <input asp-for="chamadoModel.chamadoID" class="form-control" />
                                <span asp-validation-for="chamadoModel.chamadoID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="chamadoModel.itemCatalogo" class="control-label"></label>
                                <input asp-for="chamadoModel.itemCatalogo" class="form-control" />
                                <span asp-validation-for="chamadoModel.itemCatalogo" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row mx-auto py-4">

                        <div class="form-group">
                            <label asp-for="chamadoModel.descricao" class="control-label"></label>
                            <textarea input asp-for="chamadoModel.descricao" class="form-control" id="textareachamado">
                             
                            </textarea>
                            <span asp-validation-for="chamadoModel.descricao" class="text-danger" type="textarea"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="solucaoModel.arquivos" class="control-label"></label>
                                <div class="custom-file">
                                    <input asp-for="solucaoModel.arquivos" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                                <span asp-validation-for="solucaoModel.arquivos" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- Example single danger button -->
                        <div class="btn-group">
                            <select class="btn-primary" asp-for="solucaoModel.visualizacao" value="Selecione">
                                <option value="Quem pode visualizar">Selecione</option>
                                <option value="Analista">Analista</option>
                                <option value="Cliente">Cliente</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group">
                            <label asp-for="solucaoModel.descricao" class="control-label"></label>
                            <textarea input asp-for="solucaoModel.descricao" class="form-control" id="textareasolucao"></textarea>
                            <span asp-validation-for="solucaoModel.descricao" class="text-danger" type="textarea"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i>Voltar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>



</body>
</html>

